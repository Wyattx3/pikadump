run = "pip install -r requirements.txt && python auto_drop.py"
entrypoint = "auto_drop.py"
modules = ["python-3.12", "nix"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "pip install -r requirements.txt && python auto_drop.py"]
deploymentTarget = "gce"
ignorePorts = true

[env]
PYTHONUNBUFFERED = "1"
PYTHONUTF8 = "1"

[[ports]]
localPort = 8080
externalPort = 80

[agent]
expertMode = true
